@model eUseControl.Web.Models.User.UserData
@{
    ViewBag.Title = "_Shop";
}
@using System.Web.Optimization

<div class="container">
    <div class="heading_container heading_center">
        <h2>Latest Products</h2>
    </div>
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="box">
                    <a href="@Url.Action("Product", "Home", new { p = product })">
                        <div class="img-box">
                            <img src="~/images/@(product).png" alt="@product">
                        </div>
                        <div class="detail-box">
                            <h6>@product</h6>

                        </div>
                        <div class="new">
                            <span>New</span>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
    <div class="btn-box">
        <a href="">View All Products</a>
    </div>
</div>